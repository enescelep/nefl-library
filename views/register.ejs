<%- include('partials/_head'); %>
  <body>
    <div
      class="page-header align-items-start min-vh-100"
      style="background-image: url('/img/bg-11.jpg')"
      loading="lazy"
    >
      <span class="mask bg-gradient-dark opacity-4"></span>
      <div class="container my-auto">
        <div class="row">
          <div class="col-lg-4 col-md-8 col-12 mx-auto">
            <div class="card z-index-0 fadeIn3 fadeInBottom">
              <div
                class="card-header p-0 position-relative mt-n4 mx-3 z-index-2"
              >
                <div
                  class="
                    bg-gradient-info
                    shadow-primary
                    border-radius-lg
                    py-3
                    pe-1
                  "
                >
                  <h4
                    class="text-white font-weight-bolder text-center mt-2 mb-0"
                  >
                    NEFL Kütüphane'ye Hoşgeldiniz!
                  </h4>
                </div>
              </div>
              <div class="card-body">
                <form method="POST" action="/teachers/register"  role="form" class="text-start" novalidate>
                  <div class="input-group input-group-outline my-3">
                    <label class="form-label">Ad</label>
                    <input type="text" name="name" id="name" class="form-control" />
                  </div>
                  <div class="input-group input-group-outline my-3">
                    <label class="form-label">Soyad</label>
                    <input type="text" name="lastName" id="lastName" class="form-control" />
                  </div>
                  <div class="input-group input-group-outline my-3">
                    <label class="form-label">Kullanıcı adı</label>
                    <input type="text" name="username" id="username" class="form-control" />
                  </div>
                  <div class="input-group input-group-outline mb-3">
                    <label class="form-label">Şifre</label>
                    <input type="password" name="password" id="password" class="form-control" />
                  </div>
                  <div class="text-center">
                    <button
                      type="submit"
                      id="submit"
                      value="REGISTER"
                      class="btn bg-gradient-info w-100 my-4 mb-2"
                    >
                      Kaydol
                    </button>
                  </div>
                  <p class="mt-4 text-sm text-center">
                    Hesabın var mı?
                    <a
                      href="/sign-in"
                      class="text-info text-gradient font-weight-bold"
                      >Giriş yap</a
                    >
                  </p>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <footer
        class="
          footer
          position-absolute
          bottom-2
          py-2
          w-100
          justify-content-center
        "
      >
        <div class="container">
          <div class="row align-items-center justify-content-lg-between">
            <div class="col-12 col-md-6 my-auto">
              <div
                class="copyright text-center text-sm text-white text-lg-start"
              >
                ©
                <script>
                  document.write(new Date().getFullYear());
                </script>
                ,
                <a
                  href="https://enescelep.github.io"
                  class="font-weight-bold text-white"
                  >Enes Celep</a
                >
                tarafından <i class="fa fa-heart" aria-hidden="true"></i> ile
                yapıldı
              </div>
            </div>
          </div>
        </div>
      </footer>
    </div>
    <!--   Core JS Files   -->
    <script
      src="./js/core/popper.min.js"
      type="text/javascript"
    ></script>
    <script
      src="./js/core/bootstrap.min.js"
      type="text/javascript"
    ></script>
    <script src="./js/plugins/perfect-scrollbar.min.js"></script>
    <!-- Control Center for Material UI Kit: parallax effects, scripts for the example pages etc -->
    <script
      src="./js/material-kit.min.js?v=3.0.0"
      type="text/javascript"
    ></script>
  </body>
</html>
